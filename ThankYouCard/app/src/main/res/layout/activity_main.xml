<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:context="com.example.essian.thankyoucard.MainActivity">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:contentDescription="Balancing on a slackline"
                android:scaleType="centerCrop"
                android:src="@drawable/slackline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="@dimen/medium_padding"
                android:rotation="-25"
                android:text="@string/greet"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/accent_font"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-black"
                android:padding="50dp"
                android:text="@string/primary_message"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/body_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-black"
                android:padding="15sp"
                android:text="@string/secondary_message"
                android:textColor="@color/colorSubText"
                android:textSize="@dimen/small_font" />

        </RelativeLayout>
</ScrollView>